.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-color: #f6f6f6;
}

.poem-title {
  font-size: 54rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.poem-verses {
  font-size: 32rpx;
  text-align: center;
  margin-bottom: 40rpx;
}

.poem-options {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.option {
  background-color: #fff;
  padding: 20rpx 40rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  width: 500rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  cursor: pointer;
}

.score-accuracy {
  font-size: 24rpx;
  color: #8a8a8a;
  text-align: center;
  margin-top: 20rpx;
}

.score-chart {
  width: 100%;
  height: 300rpx;
  margin-top: 20rpx;
}
