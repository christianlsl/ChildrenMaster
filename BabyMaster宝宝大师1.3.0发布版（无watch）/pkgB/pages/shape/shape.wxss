page{
  height: 100%;
}

.container{
  position: relative;
  width: 100%;
  height: 100%;
}
.canvas_area{
  width: 100%;
  height: 90%;
  background-color: #F8F8F8;
  border: solid 1px #1ECFA7;
}
.myCanvas{
  width: 100%;
  height: 100%;
}

.canvas_tools{
padding-top: 15rpx ;
  left: 0;
  bottom: 20rpx;
  width: 100%;
  height: 10%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  background-color: #1ECFA7;
}

.sbox{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: rebeccapurple;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.box1{
  background-color: #99cccc;
  background-position: center;
}

.box2{
  background-color: #0099cc;
  background-position: center;
}

.box3{
  background-color: rgba(241,64,75,1);
}

.box4{
  background-color: rgba(36,168,172,1);
}

.box5{
  background-color: #cccccc;
  background-position: center;
}

.box6{
  background-color: #ffcc00;
}

.box7{
  background-color: #ffffff;
}


.colorPicker, .penSizeSlider {
  position: absolute;
  bottom: 20%;
  left: 10%;
  width: 80%;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 0 10rpx rgba(0,0,0,0.5);
}
